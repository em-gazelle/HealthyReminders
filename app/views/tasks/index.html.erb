<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Reminder type</th>
    <th>Frequency</th>
    <th>Reminder time</th>
    <th>Message</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.reminder_type %></td>
    <td><%= task.frequency %></td>
    <td><%= task.reminder_time %></td>
    <td><%= task.message %></td>
    <td><%= task.user %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

